<IfModule authz_core_module>
    Require all denied
</IfModule>
<IfModule mod_rewrite.c>
  RewriteEngine on
	RewriteCond $1 !^(index\.php|public|\.txt) 
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteRule ^(.*)$ index.php?$1
</IfModule >
<IfModule !authz_core_module>
    Deny from all
</IfModule>